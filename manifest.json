{
  "manifest_version": 3,
  "name": "Brave Search Converter",
  "version": "0.9",
  "description": "Convierte b√∫squedas de Brave a Google, DuckDuckGo, Bing, OpenAI, Amazon y YouTube",
  "author": "https://github.com/686f6c61",
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage",
    "scripting",
    "tabs",
    "permissions"
  ],
  "host_permissions": [
    "https://api.openai.com/*",
    "<all_urls>"
  ],
  "web_accessible_resources": [{
    "resources": ["html2canvas.min.js"],
    "matches": ["<all_urls>"]
  }],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "images/icon128.png",
      "256": "images/icon256.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "128": "images/icon128.png",
    "256": "images/icon256.png"
  }
}
